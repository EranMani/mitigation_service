{
    "banned_keywords":[
        "hate",
        "violence",
        "suicide",
        "self-harm",
        "kill",
        "murder"
    ],
    "semantic_blocking": {
        "enabled": true,
        "threshold": 0.6,
        "banned_phrases": [
        "how to make a bomb",
        "how to build a weapon",
        "instructions for manufacturing drugs",
        "how to launder money",
        "stealing credit card numbers",
        "how to hack into a database",
        "generate a ransomware script"
        ]
    },
    "max_prompt_chars": 200,
    "redaction_rules": {
        "redact_emails": true,
        "redact_phone_numbers": true,
        "redact_secrets": true,
        "redact_credit_cards": true
    }
}